<h4
  class="collection-filter__title"
  data-collection-filter-title
>
  {{ label | capitalize }}

  <div class="collection-filter__title-icon">
    {% include 'icon-plus' %}
  </div>
</h4>

<div
  class="collection-filter"
  data-collection-filter-container
>
  <ul class="collection-filter__list">
    {% for value in values %}
      <li
        class="collection-filter__item"
        {% if label == 'color' %}
          style="display: inline-block;"
        {% endif %}
      >
        <a
          href="/collections/{{ collection.handle }}/filter-{{ label }}-{{ value }}"
          class="collection-filter__item-link"
        >
          {% if label == 'color' %}
            <div
              class="collection-filter__swatch"
              style="background-color: {{ value }}"
            >
            </div>
          {% else %}
            {{ value }}
          {% endif %}
        </a>
      </li>
    {% endfor %}
  </ul>
</div>
